<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Password</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |var| %>
        <tr class="table">
          <td><%= var['name'] %></td>
          <td><%= var['email'] %></td>
          <td><%= var['password'] %></td>
          <td><%= time_ago_in_words(var['updated_at']) %></td>
        </tr>
    <% end %>
</tbody>
</table>
