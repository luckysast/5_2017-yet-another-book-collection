<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
<% @records_array.each do |var| %>
    <tr>
      <td><%= var['title'] %></td>
      <td><%= var['author'] %></td>
      <td><%= time_ago_in_words(var['updated_at']) %></td>
    </tr>
<% end %>
</tbody>
</table>
